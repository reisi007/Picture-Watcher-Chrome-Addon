{
  "manifest_version": 2,
  "name": "Picture Watcher",
  "description": "Pin a picture in your local Chrome (sync not supported!)",
  "version": "0.0.0.5",
  "browser_action": {
    "default_icon": "image_48.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "image_16.png",
    "48": "image_48.png",
    "128": "image_128.png"
  },
  "permissions": [
    "background",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}